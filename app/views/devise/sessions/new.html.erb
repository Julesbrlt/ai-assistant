<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="col-md-5">
    <div class="card shadow-lg border-0 rounded-4">
      <div class="card-body p-5">
        <h2 class="text-center mb-4 fw-bold text-primary">
          ðŸš€ Welcome back
        </h2>
        <p class="text-center text-muted mb-4">
          Sign in to access your AI-powered business solutions
        </p>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.input :email,
              required: true,
              autofocus: true,
              input_html: { class: "form-control rounded-pill" },
              label: "Email address" %>
          </div>

          <div class="mb-3">
            <%= f.input :password,
              required: true,
              input_html: { class: "form-control rounded-pill" },
              label: "Password" %>
          </div>

          <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <%= link_to "Forgot password?", new_password_path(resource_name), class: "small text-decoration-none" %>
          </div>

          <%= f.button :submit, "Sign in", class: "btn btn-primary w-100 rounded-pill fw-bold shadow-sm" %>
        <% end %>

        <hr class="my-4">

        <p class="text-center mb-0">
          New here?
          <%= link_to "Create an account", new_registration_path(resource_name), class: "fw-bold text-decoration-none" %>
        </p>
      </div>
    </div>
  </div>
</div>
