<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="col-md-5">
    <div class="card shadow-lg border-0 rounded-4">
      <div class="card-body p-5">
        <h2 class="text-center mb-2 fw-bold text-primary">🔐 Réinitialiser ton mot de passe</h2>
        <p class="text-center text-muted mb-4">Entre ton email pour recevoir les instructions nécessaires</p>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.input :email,
              required: true,
              autofocus: true,
              label: "Email",
              input_html: { class: "form-control rounded-pill" } %>
          </div>

          <%= f.button :submit, "Envoyer les instructions", class: "btn btn-primary w-100 rounded-pill fw-bold shadow-sm" %>
        <% end %>

        <hr class="my-4">

        <div class="d-flex justify-content-between">
          <%= link_to "Se connecter", new_session_path(resource_name), class: "text-decoration-none" %>
          <%= link_to "Créer un compte", new_registration_path(resource_name), class: "fw-bold text-decoration-none" %>
        </div>
      </div>
    </div>
  </div>
</div>
