<h1 class="mb-4 mt-3 text-center fw-bold"> Boost your Business</h1>
<%= link_to "< Retour", company_chats_path(@chat.company) , class: "text-secondary text-decoration-underline" %>
<div class="container my-5">
  <div class="card shadow-sm border-0 rounded-4">
    <div id='messages' class="card-body" style="max-height: 55vh; overflow-y: auto;">
      <%= render "messages/messages", messages: @chat.messages %>
    </div>
  </div>
  <div id="new_message" class='mt-3'>
    <%= render "messages/form", chat: @chat, message: Message.new %>
  </div>
</div>
