<div class="container-fluid mt-4 mx-2">
  <div class="row">
    <aside class="col-md-3">
      <div class="mb-3">
        <small class="text-muted text-uppercase">Mes entreprises</small>
      </div>
      <div class="list-group list-group-flush">
        <% @companies.each do |company| %>
          <%= link_to company.name,
              company_path(company),
              class: "list-group-item list-group-item-action" %>
        <% end %>
      </div>
    </aside>
    <main class="col-md-9">
      <div class="card mb-4 shadow-sm rounded-5">
        <img src="https://wallpapers.com/images/hd/blue-4k-firewall-web-spdkbjergnyqvzcf.jpg" class="card-img-top rounded-top-5" alt="Image entreprise" style="height: 50vh; object-fit: cover;">
        <div class="card-body mx-2">
          <h2 class="card-title text-primary"><%= @companies.first.name %></h2>
          <p class="card-text"><%= @companies.first.description %></p>
          <div class="d-flex gap-2">
            <%= link_to "Chat", "#", class: "btn btn-primary" %>
            <%= link_to "Edit", "#", class: "btn btn-outline-secondary" %>
            <%= link_to "Supprimer", "#",
                        data: { turbo_method: :delete, turbo_confirm: "Supprimer cette entreprise ?" },
                        class: "btn btn-outline-danger" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 ">
          <div class="card shadow-sm mb-3 rounded-5">
            <div class="card-body">
              <h3 class="card-title">Titre aléatoire 1</h3>
              <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur ut erat.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card shadow-sm mb-3 rounded-5">
            <div class="card-body">
              <h3 class="card-title">Titre aléatoire 2</h3>
              <p class="card-text">Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card shadow-sm mb-3 rounded-5">
            <div class="card-body">
              <h3 class="card-title">Titre aléatoire 3</h3>
              <p class="card-text">Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi.</p>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
